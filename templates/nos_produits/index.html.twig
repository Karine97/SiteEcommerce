    <div class="row product-container">
    {% for produit in produits_tous %} 
       {# On fait un test d'affichage avec 'dump' {{ dump(produit) }} #}
        {# On va utiliser un mecanisque bootstrap avec des div class=row pour afficher nos produits #}
           <div class="col-md-4">
                {% include 'nos_produits/single_produit.html.twig' %}
            </div>
        {% endfor %}
        </div> 
    </div>
 </div>
{% endblock %}
